<!-- ko with: movies -->
<section class="view" id="movies">
    <h2>Movies</h2>
    <div class="row">
        <div class="col-md-6">
           
            <ul class="nav nav-pills">
                <li role="presentation"><a href="javascript:void(0)"><strong>Categories: </strong></a></li>
                <li role="presentation"><a href="javascript:void(0)" data-bind="click:showAll">All</a></li>
                <!-- ko foreach:categoryList -->
                <li role="presentation"><a href="javascript:void(0)" data-bind="click:$parent.showCat,text:categoryDesc"></a></li>
                <!-- /ko -->
            </ul>
        </div>
        <div class="col-md-3 pull-right">
            <input data-bind="value:movieFilter" placeholder="Enter Movie Name.." />
            <button data-bind="click:SearchMovie" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-search"></i> </button>
        </div>
        <div class="clearfix"></div>
    </div>
    <hr />
    <div class="row">

        <div class="col-md-12">            
            <table class="table table-striped table-hover" data-bind="visible:movieList().length > 0">
                <thead>
                    <tr>
                        <th style="width:150px;">Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach:movieList">
                    <tr>
                        <td data-bind="text:movieName"></td>
                        <td data-bind="text:movieDesc"></td>
                        <td data-bind="text:price"></td>
                        <td>
                            <button data-bind="click:$parent.addToOrder" class="btn btn-default btn-sm">Add</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p data-bind="visible:movieList().length == 0">
                Nothing found...
            </p>
        </div>
    </div>
</section>



<!-- /ko -->
