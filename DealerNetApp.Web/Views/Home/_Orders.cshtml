
<!-- ko with: orders -->
<section class="view" id="orders">
    <h2>Orders</h2>

    <div class="row">

        <div class="col-md-12">
            <table class="table table-striped table-hover" data-bind="visible:orderList().length > 0">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach:orderList">
                    <tr>
                        <td data-bind="text:orderNum"></td>
                        <td data-bind="text:orderDate"></td>
                        <td data-bind="text:orderStatu.statusDesc"></td>
                        <td data-bind="text:'R'+totalCost"></td>
                        <td>
                            <button data-bind="click:$parent.showOrder" class="btn btn-default btn-sm">Details</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <p data-bind="visible:orderList().length == 0">
                Please navigate to 'movies' to create a new order.
            </p>
        </div>
    </div>
</section>

